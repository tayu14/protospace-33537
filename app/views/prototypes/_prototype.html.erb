<div class="card">
<%# prototype.imageはmodel prototype のrb3からきているアソシエーションのおかげ %>
  <%= link_to image_tag(prototype.image, class: :card__img ), prototype_path(prototype.id)%>
  <div class="card__body">
    <%= link_to "#{prototype.title}", root_path, class: :card__title%>
    <p class="card__summary">
      <%= "#{prototype.catch_copy}" %>
    </p>
    <%= link_to "by #{prototype.user.name}", user_path(prototype.user_id), class: :card__user %>
    <%# #{モデル名.カラム)でDBのデータを呼び出せる} %>
  </div>
</div>